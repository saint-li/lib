<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PasswordInputView">
        <attr name="pwv_maxLength" format="integer" />

        <attr name="pwv_borderColor" format="color" />
        <attr name="pwv_pwdColor" format="color" />
        <attr name="pwv_haveInputBorderColor" format="color" />

        <attr name="pwv_strokeWidth" format="dimension" />
        <attr name="pwv_radius" format="dimension" />
        <attr name="pwv_spacing" format="dimension" />
        <attr name="pwv_asterisk" format="string" />

        <attr name="pwv_borderStyle" format="enum">
            <enum name="box" value="0" />
            <enum name="line" value="1" />
        </attr>
        <attr name="pwv_pwdStyle" format="enum">
            <enum name="circle" value="0" />
            <enum name="asterisk" value="1" />
            <enum name="plaintext" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TextViewDrawable">
        <attr name="drawableLeftWidth" format="dimension" />
        <attr name="drawableTopWidth" format="dimension" />
        <attr name="drawableRightWidth" format="dimension" />
        <attr name="drawableLeftHeight" format="dimension" />
        <attr name="drawableTopHeight" format="dimension" />
        <attr name="drawableRightHeight" format="dimension" />
        <attr name="drawableBottomHeight" format="dimension" />
        <attr name="drawableBottomWidth" format="dimension" />
        <attr name="isAliganCenter" format="boolean" />
    </declare-styleable>

    //环形进度条
    <declare-styleable name="CircleProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>

    //
    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
    
    //半月弧形进度条
    <declare-styleable name="SportProgressView">
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
        <attr name="emptyColor" format="color"/>
        <attr name="progressWidth" format="dimension"/>
        <attr name="stepTextSize" format="dimension"/>
        <attr name="padding" format="dimension"/>
        <attr name="name" format="string"/>
    </declare-styleable>

    //半月弧形温度进度条
    <declare-styleable name="TempProgressView">
        <attr name="tempProgressWidth" format="dimension"/>
        <attr name="progressBgColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="tempColor" format="color"/>
        <attr name="tempSize" format="dimension"/>
        <attr name="scaleColor" format="color"/>
        <attr name="scaleProgressColor" format="color"/>
        <attr name="scaleWidth" format="dimension"/>
    </declare-styleable>

    <!--  圆角ImageView  开始 -->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <!--  圆角ImageView  结束 -->


    <!-- 侧滑 -->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>
</resources>

